---
import { Image, getImage } from "astro:assets";
import shoot from "../assets/shoot.png";
import pomegranate from "../assets/pomegranate.png";

interface Props {
  title: string;
  subtitle: string;
  ctaHref: string;
  ctaText: string;
}

const { title, subtitle, ctaHref, ctaText } = Astro.props as Props;

const heroWidths = [320, 420, 560, 680, 820, 960, 1100];
type GeneratedImage = Awaited<ReturnType<typeof getImage>>;
const buildSrcset = (images: GeneratedImage[]) =>
  images
    .map(({ src, attributes }) => `${src} ${attributes.width}w`)
    .join(", ");

const dimensionOf = (value: unknown, fallback: number) => {
  if (typeof value === "number") return value;
  if (typeof value === "string") {
    const parsed = parseInt(value, 10);
    if (!Number.isNaN(parsed)) return parsed;
  }
  return fallback;
};

const makeSources = (format: "avif" | "webp" | "png", quality: number) =>
  Promise.all(
    heroWidths.map((width) =>
      getImage({ src: shoot, width, format, quality })
    )
  );

const [heroAvifSources, heroWebpSources, heroPngSources] = await Promise.all([
  makeSources("avif", 60),
  makeSources("webp", 72),
  makeSources("png", 82),
]);

const heroFallback = heroPngSources[heroPngSources.length - 1];
const heroFallbackWidth = dimensionOf(heroFallback?.attributes?.width, shoot.width);
const heroFallbackHeight = dimensionOf(heroFallback?.attributes?.height, shoot.height);
const heroSizes = "(max-width: 640px) 80vw, (max-width: 1024px) 42vw, 32vw";
---

<section class="hero">
  <div class="content">
    <h1>{title}</h1>
    <p>{subtitle}</p>
  <p><a class="cta" href={`${import.meta.env.BASE_URL}${ctaHref.replace(/^\//, "")}`}>{ctaText}</a></p>
  </div>
  <div class="media">
    <div class="scene">
      <picture class="base">
        <source
          type="image/avif"
          srcset={buildSrcset(heroAvifSources)}
          sizes={heroSizes}
        />
        <source
          type="image/webp"
          srcset={buildSrcset(heroWebpSources)}
          sizes={heroSizes}
        />
        <img
          srcset={buildSrcset(heroPngSources)}
          src={heroFallback.src}
          width={heroFallbackWidth}
          height={heroFallbackHeight}
          alt="Ρόδι Κρεμαστός — μπουκάλι, ποτήρι και φρούτα"
          loading="eager"
          decoding="async"
          fetchpriority="high"
          sizes={heroSizes}
        />
      </picture>
      <div class="label" aria-hidden="true">
        <img class="logo" src={`${import.meta.env.BASE_URL}logo.svg`} alt="Ρόδι" />
        <Image
          class="pomegranate"
          src={pomegranate}
          alt="Ρόδι"
          loading="eager"
          decoding="async"
          width={pomegranate.width}
          height={pomegranate.height}
        />
        <img class="badge" src={`${import.meta.env.BASE_URL}badge.svg`} alt="Με καταγωγή, Κρεμαστός Εύβοιας!" />
        <img class="natural-juice" src={`${import.meta.env.BASE_URL}natural-juice.svg`} alt="Φυσικός Χυμός" />
      </div>
    </div>
  </div>

</section>

<style>
  .hero {
    display: grid;
    grid-template-columns: 1.1fr 0.9fr;
    align-items: center;
    gap: 2rem;
    margin-top: -4rem;
  }

  .content {
    text-align: left;
  }

  .media {
    display: flex;
    justify-content: flex-end;
    align-items: center;
  }

  .scene {
    position: relative;
  }

  .base {
    display: block;
    width: clamp(360px, 28vw, 680px);
    filter: drop-shadow(0 24px 60px rgba(0,0,0,0.6));

    img {
      display: block;
      width: 100%;
      height: auto;
      object-fit: contain;
    }
  }

  .label {
    position: absolute;
    left: 0;
    top: 48%;
    width: 34%;
    height: 31%;
    box-sizing: border-box;
    pointer-events: none;

    .logo {
      display: block;
      position: absolute;
      top: 4%;
      left: 2%;
      width: 80%;
      height: auto;
      filter: drop-shadow(0 2px 6px rgba(0,0,0,0.35));
    }

    .badge {
      display: block;
      position: absolute;
      width: 50%;
      bottom: 0;
      right: 2%;
      height: auto;
      filter: drop-shadow(0 2px 6px rgba(0,0,0,0.35));
      transform: translateY(-4px) rotate(-4deg);
      transform-origin: 50% 50%;
    }

    .pomegranate {
      display: block;
      position: absolute;
      width: 65%;
      height: auto;
      bottom: 4%;
      left: 2%;
      filter: drop-shadow(0 2px 6px rgba(0,0,0,0.35));
    }

    .natural-juice {
      display: block;
      position: absolute;
      width: 40%;
      height: auto;
      top: 25%;
      right: 2%;
      filter: drop-shadow(0 2px 6px rgba(0,0,0,0.35));
      transform: rotate(-2deg);
      transform-origin: 50% 50%;
    }
  }

  .cta {
    display: inline-block;
    background: #b91c1c;
    color: #fff;
    text-decoration: none;
    padding: 0.75rem 1rem;
    border-radius: 10px;

    &:hover {
      background: #991b1b;
    }
  }

  /* Stack vertically on small screens: content first, media below */
  @media (max-width: 640px) {
    .hero {
      grid-template-columns: 1fr;
      gap: 1.25rem;
      margin-top: 0;
      text-align: center;
    }
    .content { text-align: center; }
    .media { justify-content: center; }
    .base {
      width: min(80vw, 560px);

      img {
        width: 100%;
      }
    }
  }
</style>
