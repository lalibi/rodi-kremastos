---
import { SITE } from "../config/site";
---

<footer>
  <div class="inner">
    <div class="info">
      <p>Â© {new Date().getFullYear()} {SITE.name}. All rights reserved.</p>
      <address>
        <span>{SITE.organization.legalName}</span>
        <a href={`tel:${SITE.organization.telephone.replace(/\s+/g, "")}`}>{SITE.organization.telephone}</a>
        <a href={`mailto:${SITE.organization.email}`}>{SITE.organization.email}</a>
      </address>
    </div>
    <div class="social">
      <a
        href={SITE.social.facebook}
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Facebook"
        title="Facebook"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" aria-hidden="true" focusable="false">
          <circle cx="12" cy="12" r="10" fill="none" stroke="currentColor" stroke-width="1.8" />
          <!-- taller 'f' so its top approaches the inner edge of the circle -->
          <!-- adjust translate for visual centering within the circle -->
          <path
            fill="currentColor"
            d="M14.2 2.6h-2.3c-2.72 0-4.05 1.42-4.05 4.24v2.1H6.6v2.35h1.25v7.45h3.05v-7.45h2.3l.45-2.35h-2.75V6.78c0-.98.4-1.63 1.85-1.63h1.45V2.6Z"
            transform="translate(2 2.7)"
          />
        </svg>
      </a>
      <a
        href={SITE.social.instagram}
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Instagram"
        title="Instagram"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" aria-hidden="true">
          <rect x="3" y="3" width="18" height="18" rx="4" ry="4" stroke="currentColor" stroke-width="1.8" />
          <circle cx="12" cy="12" r="5" stroke="currentColor" stroke-width="1.8" />
          <circle cx="17.5" cy="6.5" r="1.5" fill="currentColor" />
        </svg>
      </a>
    </div>
  </div>
</footer>

<style lang="scss">
  $padding: 2rem;

  footer {
    color: var(--muted);

    .inner {
      max-width: 1100px;
      margin: 0 auto;
      padding: $padding;
      width: calc(100% - 2 * $padding);
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: $padding;
    }

    .info {
      display: flex;
      flex-direction: column;
      gap: 0.35rem;

      p {
        margin: 0;
      }

      address {
        font-style: normal;
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
        margin: 0;
        color: var(--muted);

        a {
          color: inherit;
          text-decoration: none;

          &:hover {
            color: var(--text);
            text-decoration: underline;
          }
        }
      }
    }

    .social {
      display: inline-flex;
      gap: $padding * 0.5;
      align-items: center;

      a {
        color: var(--muted);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 2.25rem;
        height: 2.25rem;
        border-radius: 9999px;
        transition: color 150ms ease, transform 150ms ease, background-color 150ms ease;
        text-decoration: none;

        &:hover {
          color: var(--text);
          transform: translateY(-1px);
          background-color: rgba(255, 255, 255, 0.06);
        }

        &:focus-visible {
          outline: 2px solid var(--border);
          outline-offset: 2px;
        }
      }

      a[aria-label="Facebook"]:hover { color: #1877f2; }
      a[aria-label="Instagram"]:hover { color: #e4405f; }
    }
  }

  @media (max-width: 640px) {
    footer {
      .inner {
        flex-direction: column;
        align-items: flex-start;
      }

      .social {
        margin-top: 0.75rem;
      }
    }
  }
</style>
